extends baseFiles

block scripts
	script
		function init(){
			if (getCookie("login_checkbox")=="true"){
				document.getElementById('remember').checked=true;	
			}else{
				document.getElementById('remember').checked=false;	
			}
			document.getElementById('username').value=getCookie("un");
			document.getElementById('password').value=getCookie("ps");			
			$("#message").html("Login or Register");	
		}

		function submitLogin()
		{
			if (document.getElementById('remember').checked){
				setCookie("login_checkbox",true,30);	
			}else{
				setCookie("login_checkbox",false,30);		
			}
			setCookie("un",document.getElementById('username').value,30);	
			setCookie("ps",document.getElementById('password').value,30);				
			$.ajax({ method:'post',url: "/logindo",context: document.body,
				data:{ 'user':document.getElementById('username').value,
				'pass':document.getElementById('password').value    }
				
				}).done(function(data) {
					//respond
					if (data=="go"){
						window.location="/apps/";	
					}else{
						$("#message").html(data);	
					}
				}
			
			);		
		}
		
		function submitUser()
		{
			if (document.getElementById('remember').checked){
				setCookie("login_checkbox",true,30);	
			}else{
				setCookie("login_checkbox",false,30);		
			}
			
			$.ajax({ method:'post',url: "/registerdo",context: document.body,
				data:{ 'user':document.getElementById('username2').value,
				'pass':document.getElementById('password2').value    }
				
				}).done(function(data) {
					//respond
					if (data=="go"){
						window.location="/apps/";	
					}else{
						$("#message").html(data);	
					}
				}
			
			);		
		}
			
